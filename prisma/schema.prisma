generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
  contador
}

model Company {
  workspace        String   @id
  name             String
  address          String?
  rnc              String?
  logotype         String?
  phone            String?
  description      String?
  email            String   @unique
  createdAt        DateTime @default(now())
  suscription_plan String?

  //relaciones
  user            User[]
  products        Products[]
  category        Category[]
  supplier        Supplier[]
  ProductMovement ProductMovement[]
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  disabled Boolean @default(false)
  role     Role    @default(admin)

  //relaciones
  company   Company @relation(fields: [companyId], references: [workspace])
  companyId String
}

model Products {
  id          String   @id @default(uuid())
  name        String
  image       String?
  description String?
  price       Decimal
  stock       Int
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(true)

  //relaciones

  company   Company @relation(fields: [companyId], references: [workspace])
  companyId String

  supplier   Supplier @relation(fields: [supplierId], references: [id])
  supplierId String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  productMovements ProductMovement[]

  // Products   Products[]
  // Products   Products?  @relation(fields: [productsId], references: [id])
  productsId String?
}

enum MovementType {
  Inbound
  Outbound
  Transfer
  Adjustment
}

model ProductMovement {
  id          String       @id @default(uuid())
  type        MovementType
  quantity    Int          @default(1)
  description String?
  createdAt   DateTime     @default(now())

  //relaciones
  product   Products @relation(fields: [productId], references: [id])
  company   Company  @relation(fields: [companyId], references: [workspace])
  productId String
  companyId String
}

model Category {
  id       String  @id @default(uuid())
  name     String
  isActive Boolean @default(true)

  //relaciones
  company   Company @relation(fields: [companyId], references: [workspace])
  companyId String

  Products Products[]
}

model Supplier {
  id       String  @id @default(uuid())
  name     String
  email    String
  phone    String
  address  String
  isActive Boolean @default(true)

  //relaciones
  company   Company @relation(fields: [companyId], references: [workspace])
  companyId String

  products Products[]
}
