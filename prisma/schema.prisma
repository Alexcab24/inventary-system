generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
  contador
}

enum MovementType {
  Inbound
  Outbound
  Transfer
  Adjustment
}

model Company {
  id_tenant        String   @id
  name             String
  address          String?
  rnc              String?
  logotype         String?
  phone            String
  email            String   @unique
  createdAt        DateTime @default(now())
  suscription_plan String?

  //relaciones
  user     User[]
  products Products[]
  category Category[]
  supplier Supplier[]
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  disabled Boolean @default(false)
  role     Role    @default(admin)

  //relaciones
  company   Company @relation(fields: [companyId], references: [id_tenant])
  companyId String
}

model Products {
  id          String   @id @default(uuid())
  name        String
  // image       String?
  description String?
  price       Decimal
  stock       Int
  createdAt   DateTime @default(now())

  //relaciones

  company   Company @relation(fields: [companyId], references: [id_tenant])
  companyId String

  supplier   Supplier @relation(fields: [supplierId], references: [id])
  supplierId String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  productMovement   ProductMovement @relation(fields: [productMovementId], references: [id])
  productMovementId String
}

model ProductMovement {
  id        String       @id @default(uuid())
  type      MovementType
  createdAt DateTime     @default(now())

  Products Products[]
}

model Category {
  id   String @id @default(uuid())
  name String

  //relaciones
  company   Company @relation(fields: [companyId], references: [id_tenant])
  companyId String

  Products Products[]
}

model Supplier {
  id      String @id @default(uuid())
  name    String
  email   String
  phone   String
  address String

  //relaciones
  company   Company @relation(fields: [companyId], references: [id_tenant])
  companyId String

  products Products[]
}
