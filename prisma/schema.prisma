generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
  contador
}

model Company {
  id_tenant        String   @id
  name             String
  address          String?
  rnc              String?
  logotype         String?
  phone            String
  email            String   @unique
  createdAt        DateTime @default(now())
  suscription_plan String?

  //relaciones
  user User[]
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(admin)

  //relaciones
  company   Company @relation(fields: [companyId], references: [id_tenant])
  companyId String
}
